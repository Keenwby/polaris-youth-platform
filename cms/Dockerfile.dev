FROM node:20-alpine

WORKDIR /opt/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create required directories and set permissions
RUN mkdir -p .tmp public/uploads && \
    chown -R node:node /opt/app

USER node

EXPOSE 1337

CMD ["npm", "run", "develop"]