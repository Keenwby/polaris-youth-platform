{
  "kind": "singleType",
  "collectionName": "site_setting",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site settings and configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "default": "北辰青年发展中心"
    },
    "siteDescription": {
      "type": "text",
      "required": true,
      "default": "让青年活成自己想要的模样"
    },
    "siteUrl": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "socialLinks": {
      "type": "json",
      "default": {
        "wechat": "",
        "weibo": "",
        "email": "",
        "phone": ""
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data"
    },
    "navigation": {
      "type": "json",
      "default": []
    },
    "footer": {
      "type": "component",
      "repeatable": false,
      "component": "layout.footer"
    }
  }
}
